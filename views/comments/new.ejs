<% include ../partials/header %>


    <div class="row justify-content-center">
        <div class="col-md-12 text-center mb-4">
            <h1>Create a New Comment to <%=campground.name%>:</h1>
        </div>
        <div id="newCampgroundForm" class="col-lg-4 col-md-6 col-sm-8">
            <form action="/campgrounds/<%=campground._id%>/comments" method="post">
                <div class="form-group">
                    <textarea placeholder="Type your comment here..." rows="5" name="comment[text]" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Create!</button>   
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-md">View all Campgrounds!</a>
        </div>
    </div>

<% include ../partials/footer %>