<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit <%=campground.name%>:</h1>
        <div id="newCampgroundForm" style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
                </div>
                 <div class="form-group">
                    <input type="number" value="<%=campground.price%>" name="campground[price]" step="0.01" class="form-control">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <textarea rows="5" name="campground[description]" class="form-control"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-block">Edit!</button>   
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-md">View all Campgrounds!</a>
        </div>
    </div>
<% include ../partials/footer %>